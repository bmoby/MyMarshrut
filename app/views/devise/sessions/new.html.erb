		<%= render 'shared/navbar' %>


<div class='hidden-xs hiddne-sm'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='vertical-center'>
      <div class='col-md-4 col-md-offset-4 text-center log'>
        
        <div class='row reg-log-block text-center'>
          <div class='row reg-log-block-border text-center'>

            <div class='row log-title text-center'>
                <h2><i class='glyphicon glyphicon-link'></i> Вход</h2>
            </div>
            </br>
            </br>

            <div class='row usertextfield'>
              <div class='col-md-2 col-md-offset-1 text-center user'>
                <i class="fa fa-at" aria-hidden="true"></i>
              </div>
                
              <div class='col-md-8 text-left montextfield'>
                <div class="field">
                  <%= f.email_field :email, autocomplete: "off", class: 'obligatoir', :placeholder => 'Ваш E-mail' %>
                </div>
              </div>
            </div>

            <div class='row usertextfield-md'>
              <div class='col-md-2 col-md-offset-1 text-center user'>
                <i class="fa fa-lock" aria-hidden="true"></i>
              </div>
                
              <div class='col-md-8 text-left montextfield'>
                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", class: 'obligatoir', :placeholder => 'Ваш пароль'%>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="row">
                <div class='col-md-10 col-md-offset-1 remreg'>
                  <div class='col-md-1 checkcol'>
                    <%= f.check_box :remember_me, class: 'check' %>
                  </div>

                  <div class='col-md-2 remcol'>
                    <%= f.label :remember_me, 'запомнить?', class: 'remember-md' %>
                  </div>

                  <div class='col-md-6 col-md-offset-3 text-right passforgot'>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Забыли пароль?", new_password_path(resource_name)%>
                    <% end -%>  
                  </div>
                </div>
              </div>
            <%end%>

            <div>
              <%= f.submit "ВОЙТИ", class: "log-submitbox" %>
            </div>

            <div class='row text-center regcol'>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Регистрация", new_registration_path(resource_name) %>
            <% end -%>
            </div>

          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>



  