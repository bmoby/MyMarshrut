<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Новый пароль" %><br />
    <%= f.password_field :password, class:'inputter', autofocus: true, autocomplete: "off"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Повторите новый пароль" %><br />
    <%= f.password_field :password_confirmation, class:'inputter', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить новый пароль", class:'btn btn-info' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>