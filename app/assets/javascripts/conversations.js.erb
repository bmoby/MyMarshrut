$(document).ready(function(){
	$('.one-conversation').on('click', function(e){
		e.preventDefault();
		var conversationId,
		conversationId = $(this).attr('data-convId');
		$.ajax('conversations/'+conversationId, {
			success: function(response){
				$('.conv-past .messagesboxajax').html(response).slideDown();
				$('.conversation-height').animate({scrollTop: $('.conversation-height').prop("scrollHeight")}, 1);
			}
		});
		$.ajax('conversations/'+conversationId+'/replay', {
			success: function(response){
				$('.conv-past .replayboxajax').html(response).slideDown();
			}
		});
	});
});