
<%unless user_signed_in?%>
<nav class="navbar navbar-default navbar-static-top">
	<div class='container-fluid text-center'>
		<div class='col-xs-1 navbar-brand-xs'>
			<a href='<%=root_path%>'><i class="fa fa-bus" aria-hidden="true"></i></a>
		</div>
		<div class='col-xs-8 col-xs-offset-3 notconnectedlinksmobile text-right nav-xs'>
			<li><%= link_to new_user_session_path, class:'newusersessionclass' do%>
				<i class="iconsignin fa fa-sign-in"></i> Bход
				<%end%>
			</li>
			<li><%= link_to new_user_registration_path, class:'newusersessionclass' do%>
				<i class="fa fa-pencil" aria-hidden="true"></i> Pегистрация
				<%end%>
			</li>
		</div>
	</div>
</nav>
<%else%>

<nav class="navbar navbar-default navbar-static-top">
	<div class='container-fluid text-center'>
		<div class='navbar-header'>
			<div class='navbar-brand'>
			<a href='<%=root_path%>'><i class="fa fa-bus" aria-hidden="true"></i></a>
		</div>
				<% if current_user.mailbox.conversations.unread(current_user).count == 0 %>
					<button type'button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse'>
						<span class='sr-only'>navigateur</span>
						<span class='icon-bar'></span>
						<span class='icon-bar'></span>
						<span class='icon-bar'></span>
					</button>
				<%else%>
					<button type'button' class='notibtn navbar-toggle' data-toggle='collapse' data-target='.navbar-collapse'>
						<div>
						<span class='sr-only'>navigateur</span>
						<p class='notif'><i class="fa fa-bell" aria-hidden="true"></i> <%=current_user.mailbox.conversations.unread(current_user).count%></p>
						</div>
					</button>
				<%end%>
		</div>
			<div class='col-xs-10 col-xs-offset-1'>
		<ul class='notconnectedlinks nav navbar-nav navbar-right collapse navbar-collapse text-left'>
			<li> <%= link_to mymenu_path_url do%>
				<%if current_user.avatars.first.present?%>
						<%= image_tag current_user.avatars.first.image.thumb('50x50#').url, class:'profile-picturenav'%>
					<%else%>
						<%= image_tag("no-profile.gif", class:'profile-picturenav')%>
					<%end%> Мой офис
				<%end%>
			</li>
			<% if current_user.mailbox.conversations.unread(current_user).count == 0 %>
			<li><%= link_to conversations_path(current_user) do%>
			<i class="glyphicon glyphicon-envelope"></i> Мои сообщения
			<%end%>
			</li>
			<%else%>
			<li>
			<%= link_to conversations_path(current_user) do%>
			<p class='notif'><i class="glyphicon glyphicon-envelope"></i> <%=current_user.mailbox.conversations.unread(current_user).count%> сообщение</p>
			<%end%>
			</li>
			<%end%>
            <li> <%= link_to  edit_user_registration_path do%>
				<i class="glyphicon glyphicon-cog"></i> Настройки
				<%end%>
			</li>
			<% if current_user.annonces.count < 4%>
            <li> <%= link_to  new_annonce_path do%>
				<i class="fa fa-plus-circle" aria-hidden="true"></i>
				 Создать объявление
				<%end%>
			</li>
			<%end%>
            	<li role="separator" class="divider"></li>
            <li><%= link_to destroy_user_session_path, :method => :delete do%>
				<i class='glyphicon glyphicon-off'></i> Выход 
				<%end%>
			</li>
		</ul>
	</div>
	</div>
</nav>
<%end%>