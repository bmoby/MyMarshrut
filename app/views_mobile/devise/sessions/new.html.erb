		<%= render 'shared/navbar' %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='vertical-center'>
      <div class='container-fluid text-center reg-log-xs'>
        
        <div class='row reg-log-block text-center'>
          <div class='row reg-log-block-border text-center'>

            <div class='row log-title-xs text-center'>
                <h2><i class='glyphicon glyphicon-link'></i> Вход</h2>
            </div>
            </br>
            </br>

            <div class='row usertextfield-xs'>
              <div class='col-xs-2 col-xs-offset-1 text-center user-xs'>
                <i class="fa fa-at" aria-hidden="true"></i>
              </div>
                
              <div class='col-xs-8 text-left montextfield-xs'>
                <div class="field">
                  <%= f.email_field :email, autocomplete: "off", class: 'obligatoir-xs', :placeholder => 'Ваш E-mail' %>
                </div>
              </div>
            </div>

            <div class='row usertextfield-xs'>
              <div class='col-xs-2 col-xs-offset-1 user-xs'>
                <i class="fa fa-lock text-center" aria-hidden="true"></i>
              </div>
                
              <div class='col-xs-8 text-left montextfield-xs'>
                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", class: 'obligatoir-xs', :placeholder => 'Ваш пароль'%>
                </div>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="row">
                <div class='col-xs-10 col-xs-offset-1 remreg-xs'>
                  <div class='col-xs-1 checkcol'>
                    <%= f.check_box :remember_me, class: 'check-xs' %>
                  </div>

                  <div class='col-xs-2 remcol-xs'>
                    <%= f.label :remember_me, 'запомнить?', class: 'remember-xs' %>
                  </div>

                  <div class='col-xs-6 col-xs-offset-3 text-right passforgot-xs'>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Забыли пароль?", new_password_path(resource_name)%>
                    <% end -%>  
                  </div>
                </div>
              </div>
            <%end%>

            <div>
              <%= f.submit "ВОЙТИ", class: "log-submitbox" %>
            </div>

            <div class='row text-center regcol'>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Регистрация", new_registration_path(resource_name) %>
            <% end -%>
            </div>

          </div>
        </div>
      </div>
    </div>
  <%end%>